            />
        <TextView
            android:id="@+id/leaderboards_TXT_seventhScore"

            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_eighthScore"

            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_ninthScore"

            android:layout_row="3"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_tenthScore"

            android:layout_row="4"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            style="@style/leaderboardsText"
            />








    </GridLayout>

</RelativeLayout>