<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LeaderboardsActivity"
    android:background="@drawable/ic_large_triangles"
    >

    <TextView
        android:id="@+id/leaderboards_TXT_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:text="Leaderboards"
        android:textSize="50sp"
        />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10"
        android:layout_below="@id/leaderboards_TXT_title"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_margin="30dp"

        tools:context=".GridXMLActivity" >
        <TextView
            android:id="@+id/leaderboards_TXT_firstName"

            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minEms="7"
            android:text="1."
            style="@style/leaderboardsText"
            />
        <TextView
            android:id="@+id/leaderboards_TXT_secondName"

            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="2."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_thirdName"

            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minEms="7"
            android:text="3."
            style="@style/leaderboardsText"
            />
        <TextView
            android:id="@+id/leaderboards_TXT_fourthName"

            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="4."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_fifthName"

            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="5."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_sixthName"

            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="6."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_seventhName"

            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="7."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_eighthName"

            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="8."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_ninthName"

            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="9."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_tenthName"

            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="10."
            style="@style/leaderboardsText"

            />
        <TextView
            android:id="@+id/leaderboards_TXT_firstScore"

            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

